{
  "name": "smart-commit-extension",
  "displayName": "Smart Commit",
  "version": "1.0.0",
  "description": "VS Code extension for smart git commits with OpenAI integration",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-commit.createCommit",
        "title": "Smart Commit: Create Commit"
      }
    ],
    "configuration": {
      "title": "Smart Commit",
      "properties": {
        "smartCommit.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for generating commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.13.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "openai": "^4.24.7"
  }
}
